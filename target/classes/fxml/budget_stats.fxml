<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.tsumiyoku.familyhub.ui.BudgetStatsController"
            styleClass="root-bg">
    <top>
        <HBox spacing="12">
            <padding><Insets topRightBottomLeft="16"/></padding>
            <Label text="Dépenses par catégorie" styleClass="section-title"/>
        </HBox>
    </top>
    <center>
        <BarChart fx:id="chart" animated="false">
            <xAxis>
                <CategoryAxis label="Catégorie"/>
            </xAxis>
            <yAxis>
                <NumberAxis label="Montant total"/>
            </yAxis>
        </BarChart>
    </center>
</BorderPane>