<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.tsumiyoku.familyhub.ui.LoginController"
      alignment="CENTER" spacing="16" stylesheets="@../app.css" styleClass="root-bg">
    <Label text="FamilyHub" styleClass="app-title"/>
    <Label text="Choisissez un utilisateur ou créez-en un nouveau" styleClass="muted"/>
    <HBox spacing="8">
        <padding>
            <Insets topRightBottomLeft="10"/>
        </padding>
        <ComboBox fx:id="userCombo" prefWidth="320"/>
        <PasswordField fx:id="loginPass" prefWidth="320"/>
        <Button text="Se connecter" onAction="#onLogin"/>
    </HBox>
    <Separator/>
    <HBox spacing="8">
        <padding>
            <Insets topRightBottomLeft="10"/>
        </padding>
        <TextField fx:id="newUserName" promptText="Nouveau nom d'utilisateur" prefWidth="320"/>
        <TextField fx:id="newUserEmail" promptText="Email (optionnel)" prefWidth="320"/>
        <PasswordField fx:id="newUserPass" promptText="Password" prefWidth="320"/>
        <Button text="Créer" onAction="#onCreate"/>
    </HBox>
</VBox>
