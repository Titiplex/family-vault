<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.titiplex.familyhub.ui.MainController"
            stylesheets="@../app.css" styleClass="root-bg">

    <top>
        <VBox>
            <MenuBar>
                <Menu text="Fichier">
                    <MenuItem text="Export / Import" onAction="#openExport"/>
                    <MenuItem text="Sync…" onAction="#openSync"/>
                </Menu>
            </MenuBar>
            <HBox spacing="12">
                <padding>
                    <Insets topRightBottomLeft="16"/>
                </padding>
                <Label text="Essentials" styleClass="section-title"/>
            </HBox>
        </VBox>
    </top>
    <center>
        <VBox spacing="24" alignment="TOP_CENTER">
            <GridPane hgap="16" vgap="16">
                <columnConstraints>
                    <ColumnConstraints percentWidth="25"/>
                </columnConstraints>
                <columnConstraints>
                    <ColumnConstraints percentWidth="25"/>
                </columnConstraints>
                <columnConstraints>
                    <ColumnConstraints percentWidth="25"/>
                </columnConstraints>
                <columnConstraints>
                    <ColumnConstraints percentWidth="25"/>
                </columnConstraints>

                <!-- Essentials -->
                <StackPane GridPane.columnIndex="0" GridPane.rowIndex="0" styleClass="tile" onMouseClicked="#openLists">
                    <VBox alignment="CENTER" spacing="8">
                        <Label text="📝" styleClass="tile-emoji"/>
                        <Label text="Lists"/>
                    </VBox>
                </StackPane>
                <StackPane GridPane.columnIndex="1" GridPane.rowIndex="0" styleClass="tile"
                           onMouseClicked="#openCalendar">
                    <VBox alignment="CENTER" spacing="8">
                        <Label text="📅" styleClass="tile-emoji"/>
                        <Label text="Calendar"/>
                    </VBox>
                </StackPane>
                <StackPane GridPane.columnIndex="2" GridPane.rowIndex="0" styleClass="tile"
                           onMouseClicked="#openRecipes">
                    <VBox alignment="CENTER" spacing="8">
                        <Label text="🍲" styleClass="tile-emoji"/>
                        <Label text="Recipes"/>
                    </VBox>
                </StackPane>
                <StackPane GridPane.columnIndex="3" GridPane.rowIndex="0" styleClass="tile"
                           onMouseClicked="#openMessages">
                    <VBox alignment="CENTER" spacing="8">
                        <Label text="💬" styleClass="tile-emoji"/>
                        <Label text="Messages"/>
                    </VBox>
                </StackPane>

                <StackPane GridPane.columnIndex="0" GridPane.rowIndex="1" styleClass="tile"
                           onMouseClicked="#openGallery">
                    <VBox alignment="CENTER" spacing="8">
                        <Label text="📷" styleClass="tile-emoji"/>
                        <Label text="Gallery"/>
                    </VBox>
                </StackPane>
                <StackPane GridPane.columnIndex="1" GridPane.rowIndex="1" styleClass="tile"
                           onMouseClicked="#openContacts">
                    <VBox alignment="CENTER" spacing="8">
                        <Label text="🧑‍🤝‍🧑" styleClass="tile-emoji"/>
                        <Label text="Contacts"/>
                    </VBox>
                </StackPane>
                <StackPane GridPane.columnIndex="2" GridPane.rowIndex="1" styleClass="tile"
                           onMouseClicked="#openActivity">
                    <VBox alignment="CENTER" spacing="8">
                        <Label text="📊" styleClass="tile-emoji"/>
                        <Label text="Activity"/>
                    </VBox>
                </StackPane>
            </GridPane>

            <HBox spacing="12">
                <padding>
                    <Insets topRightBottomLeft="16"/>
                </padding>
                <Label text="More" styleClass="section-title"/>
            </HBox>

            <GridPane hgap="16" vgap="16">
                <columnConstraints>
                    <ColumnConstraints percentWidth="25"/>
                </columnConstraints>
                <columnConstraints>
                    <ColumnConstraints percentWidth="25"/>
                </columnConstraints>
                <columnConstraints>
                    <ColumnConstraints percentWidth="25"/>
                </columnConstraints>
                <columnConstraints>
                    <ColumnConstraints percentWidth="25"/>
                </columnConstraints>

                <StackPane GridPane.columnIndex="0" GridPane.rowIndex="0" styleClass="tile-premium"
                           onMouseClicked="#openDocuments">
                    <VBox alignment="CENTER" spacing="8">
                        <Label text="📁" styleClass="tile-emoji"/>
                        <Label text="Documents"/>
                    </VBox>
                </StackPane>
                <StackPane GridPane.columnIndex="1" GridPane.rowIndex="0" styleClass="tile-premium"
                           onMouseClicked="#openBudget">
                    <VBox alignment="CENTER" spacing="8">
                        <Label text="🐷" styleClass="tile-emoji"/>
                        <Label text="Budget"/>
                    </VBox>
                </StackPane>
                <StackPane GridPane.columnIndex="2" GridPane.rowIndex="0" styleClass="tile-premium"
                           onMouseClicked="#openMeals">
                    <VBox alignment="CENTER" spacing="8">
                        <Label text="🍴" styleClass="tile-emoji"/>
                        <Label text="Meals"/>
                    </VBox>
                </StackPane>
                <StackPane GridPane.columnIndex="3" GridPane.rowIndex="0" styleClass="tile-premium"
                           onMouseClicked="#openTimetable">
                    <VBox alignment="CENTER" spacing="8">
                        <Label text="🗓️" styleClass="tile-emoji"/>
                        <Label text="Timetable"/>
                    </VBox>
                </StackPane>

                <StackPane GridPane.columnIndex="0" GridPane.rowIndex="1" styleClass="tile-premium"
                           onMouseClicked="#openMap">
                    <VBox alignment="CENTER" spacing="8">
                        <Label text="📍" styleClass="tile-emoji"/>
                        <Label text="Map"/>
                    </VBox>
                </StackPane>
            </GridPane>
        </VBox>
    </center>

</BorderPane>
